{
  "compilerOptions": {
    "lib": ["DOM", "ES2015"],
    "target": "ES6",
    "module": "ES2015",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "declaration": true,
    "noEmitHelpers": false,
    "importHelpers": true,
    "outDir": "./dist",
    "inlineSourceMap": false,

  },
  "include": ["src"]
}